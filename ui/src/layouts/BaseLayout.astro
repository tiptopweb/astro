---
// Base Layout
const { title } = Astro.props
---

<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title}</title>

	<link rel="icon" type="image/x-icon" href="/favicon.ico" />

	<style global>
			@import "../styles/global.css";
	</style>
</head>
<body>
	<main class="container max-w-4xl mx-auto px-4">
		<header class="py-5">
			<div class="flex flex-row space-x-4 items-center">
			    <div><img height="200" width="100" src="/assets/logo.svg" alt="Astro logo"></div>
			    <div class="text-5xl">+</div>
			    <div><img height="100" width="250" src="/assets/servicestack.svg" alt="ServiceStack logo"></div>			
			</div>
		</header>
		<slot />
	</main>
</body>
</html>
